<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context="com.example.android.kitapstore.KitapEkle">
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="text"

        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="73dp"
        android:id="@+id/editText_kitapAdi"
        android:hint="Kitap ismi Giriniz"
        android:background="@drawable/edittext"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"

        android:ems="10"
        android:layout_below="@+id/editText_kitapAdi"
        android:layout_alignEnd="@+id/editText_kitapAdi"
        android:layout_marginTop="49dp"
        android:id="@+id/editText_yazar"
        android:hint="Yazar Ä°smi Giriniz"

        android:background="@drawable/edittext"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"

        android:ems="10"
        android:background="@drawable/edittext"
        android:layout_below="@+id/editText_yazar"
        android:layout_alignStart="@+id/editText_yazar"
        android:layout_marginTop="52dp"
        android:id="@+id/editText_fiyat"
        android:hint="Fiyat Giriniz"
        android:textAlignment="center"

        />

    <Button
        android:text="Kaydet"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="43dp"
        android:id="@+id/kaydet"
        android:background="@drawable/stil"
        android:textAlignment="center"
        android:layout_below="@+id/editText_fiyat"
        android:layout_alignStart="@+id/editText_fiyat" />


</RelativeLayout>
